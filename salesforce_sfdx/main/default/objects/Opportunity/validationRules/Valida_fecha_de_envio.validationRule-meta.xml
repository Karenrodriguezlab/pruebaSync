<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valida_fecha_de_envio</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
OSFMX_NumberAssociatedOffers__c&lt;1,  NOT(ISNULL(OSFMX_BindingOffersDeliveryDate__c)))</errorConditionFormula>
