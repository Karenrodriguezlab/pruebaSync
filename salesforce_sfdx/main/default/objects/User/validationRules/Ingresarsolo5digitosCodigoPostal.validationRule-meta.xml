<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Ingresarsolo5digitosCodigoPostal</fullName>
    <active>false</active>
    <errorConditionFormula>AND(NOT(ISBLANK( PostalCode )),LEN(PostalCode)!=5,Profile.Name=&quot;Perfil de Clientes&quot;)</errorConditionFormula>
    <errorDisplayField>PostalCode</errorDisplayField>
    <errorMessage>Para &quot;Código Postal&quot; debe ingresar sólo 5 dígitos.</errorMessage>
</ValidationRule>
